<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- General Settings and Fonts -->
    <%- include('./partials/head-general-settings') %>    
    <!-- CSS Links -->
    <%- include('./partials/bootstrap-css-head') %>
    <link rel="stylesheet" href="/stylesheets/inventory-store.css" />
    <script defer src="/javascripts/inventoryStore.js"></script>
    <embed src="/sounds/failure.mp3" autostart="false" id="sound-failure" enablejavascript="true" style="display: none; position: absolute;">
    <title>Inventory | Board Hero</title>
  </head>

  <body>
    <div class="global">
      <%- include('./partials/sidebar') %>
      
      <div class="home-section">
        <div class='invisible-alert'>   
          <h1></h1>
          <button onclick="removeAlert()">OK, I'll work harder...</button>
        </div>
        
        <main>
          <div class="container-inventory-store">
            <div class="container-inventory">
              <h2>Inventory</h2>

              <div class="character-stats">
                <div class="character-image" id="character-image">
                  <% user.elements.map(element => { %>
                      <% if (element.isEquipped) { %>
                        <div class="unique-image equipToggle show-item" id="<%= element.imagePath.substr(element.imagePath.lastIndexOf('/') + 1).slice(0, -4) %>" style="background-image: url('<%= element.imagePath %>');"></div>
                      <% } else { %> 
                        <div class="unique-image equipToggle" id="<%= element.imagePath.substr(element.imagePath.lastIndexOf('/') + 1).slice(0, -4) %>" style="background-image: url('<%= element.imagePath %>');"></div>
                    <% }}) %> 

                  <div class="character-level">Lv. <p><%= user.character.char_level %></p></div>
                  <div id="item-tryout"><img id="tryout-of-choice" src="" alt=""></div>
                </div>
  
                <div class="character-progress">
                  <div class="progress mb-2">
                    <div class="progress-bar progress-bar-striped bg-bhpurple" role="progressbar" style="width: 50%"
                      aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"><span class="char-exp">EXP <%= user.character.experience %>/100</span></div>
                  </div>
                <div id="character_coins">
                  <span> Hero Coins</span>
                  <i class="bi bi-coin"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                      class="bi bi-coin" viewBox="0 0 16 16">
                      <path
                        d="M5.5 9.511c.076.954.83 1.697 2.182 1.785V12h.6v-.709c1.4-.098 2.218-.846 2.218-1.932 0-.987-.626-1.496-1.745-1.76l-.473-.112V5.57c.6.068.982.396 1.074.85h1.052c-.076-.919-.864-1.638-2.126-1.716V4h-.6v.719c-1.195.117-2.01.836-2.01 1.853 0 .9.606 1.472 1.613 1.707l.397.098v2.034c-.615-.093-1.022-.43-1.114-.9H5.5zm2.177-2.166c-.59-.137-.91-.416-.91-.836 0-.47.345-.822.915-.925v1.76h-.005zm.692 1.193c.717.166 1.048.435 1.048.91 0 .542-.412.914-1.135.982V8.518l.087.02z" />
                      <path fill-rule="evenodd" d="M8 15A7 7 0 1 0 8 1a7 7 0 0 0 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                      <path fill-rule="evenodd"
                        d="M8 13.5a5.5 5.5 0 1 0 0-11 5.5 5.5 0 0 0 0 11zm0 .5A6 6 0 1 0 8 2a6 6 0 0 0 0 12z" />
                    </svg></i>
                  <span><%= user.character.coins %></span>
                </div>
              </div>
              </div>

              <h3>Items</h3>
              <div class="item-list">
                <p id="intro-phrase">You don't own any items yet.</p>
                <% ownedEquips.forEach(equip => { %>
                <div class="item">
                  <img src="<%= equip.imagePath %>" alt="<%= equip.elementName %>" />
                  <p class="item-description"><%= equip.elementName %></p>
                    <button class="btnEquip" type="submit" onclick="equipUnequip('<%= equip.id %>')">
                      <% if(equip.isEquipped) { %>Unequip<% } else { %>Equip<% } %>
                    </button>
                </div>
                <% }) %> 
              </div>

              <div class="badges">
                <h3>Badges</h3>
                <div class="badge-list">
                  <div class="badge">
                    <img src="/images/badges/badge_firstlogin.png" alt="" />
                    <p class="item-description">Zero Hero</p>
                  </div>
                  <div class="badge">
                    <img class="tackler" src="/images/badges/badge_tasktackler.png" alt="" />
                    <p class="item-description">Task Tackler</p>
                  </div>
                  <div class="badge">
                    <img src="/images/badges/badge_dutydoer.png" alt="" />
                    <p class="item-description">Duty Doer</p>
                  </div>
                </div>
              </div>
            </div>

            <div class="container-store">
              <h2>Store</h2>

                <div class="store-list">

                  <% allElements.forEach(elem => { %>
                  <div class="item-selling <%=elem.is_owned%>">
                    <img class="item-img" src="<%=elem.image_path%> " alt="<%=elem.name%>" />
                    <div class="item-info">
                      <div class="item-name-and-price">
                        <div>
                          <p class="item-name"><%=elem.name%></p>
                          <p>Lv. <%=elem.level%></p>
                        </div>
                        <div class="item-price">
                          <i class="bi bi-coin"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                            class="bi bi-coin" viewBox="0 0 16 16">
                            <path
                            d="M5.5 9.511c.076.954.83 1.697 2.182 1.785V12h.6v-.709c1.4-.098 2.218-.846 2.218-1.932 0-.987-.626-1.496-1.745-1.76l-.473-.112V5.57c.6.068.982.396 1.074.85h1.052c-.076-.919-.864-1.638-2.126-1.716V4h-.6v.719c-1.195.117-2.01.836-2.01 1.853 0 .9.606 1.472 1.613 1.707l.397.098v2.034c-.615-.093-1.022-.43-1.114-.9H5.5zm2.177-2.166c-.59-.137-.91-.416-.91-.836 0-.47.345-.822.915-.925v1.76h-.005zm.692 1.193c.717.166 1.048.435 1.048.91 0 .542-.412.914-1.135.982V8.518l.087.02z" />
                            <path fill-rule="evenodd" d="M8 15A7 7 0 1 0 8 1a7 7 0 0 0 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                            <path fill-rule="evenodd"
                            d="M8 13.5a5.5 5.5 0 1 0 0-11 5.5 5.5 0 0 0 0 11zm0 .5A6 6 0 1 0 8 2a6 6 0 0 0 0 12z" />
                          </svg></i>
                          <p><%=elem.price%></p>

                          
                          <button class="btn-buy" onclick="makePurchase('<%=elem.id%>')"><% if(elem.is_owned === 'owned') { %>Owned<% } else { %>Buy<% } %></button>
                        </div>
                      </div>
                      <p class="item-description"><%=elem.description%></p>
                    </div>
                  </div>

                  <% }) %> 
                  
                  </div>
                  
                </div>
          </div>
        </main>
      </div>
    </div>

    <%- include('./partials/bootstrap-js-scripts') %>
  </body>
</html>
